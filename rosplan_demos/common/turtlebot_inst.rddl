non-fluents nf_turtlebot_inst1 {
	domain = turtlebot_domain;
	objects {
		//waypoint: {wp0, wp1, wp2, wp3, wp4, wp5, wp6, wp7, wp8, wp9, wp10};
		waypoint: {wp0, wp1};
        robot: {kenny};
	};
	
	non-fluents {
		DOCK_AT(wp0);
	};
}

instance turtlebot_inst__1 {
	domain = turtlebot_domain;
	non-fluents = nf_turtlebot_inst1;
	init-state {
		robot_at(kenny, wp0);
		docked(kenny);
	};

	max-nondef-actions = 1;
	horizon  = 12;
	discount = 1.0;
}