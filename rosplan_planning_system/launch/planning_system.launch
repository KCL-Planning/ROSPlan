<launch>

  <arg name="working_dir" default="/tmp" />

  <param name="domain_path" value="$(find rosplan_planning_system)/common/domain.pddl" />

  <!-- planning system -->
  <node name="rosplan_planning_system" pkg="rosplan_planning_system" type="planner" respawn="false" output="screen">

    <!-- directory for generated files -->
    <param name="data_path" value="$(arg working_dir)/" />
    <param name="problem_path" value="$(arg working_dir)/problem.pddl" />

    <!-- to run the planner -->
    <param name="planner_command" value="timeout 10 $(find rosplan_planning_system)/common/bin/popf -n" />
  </node>

</launch>
